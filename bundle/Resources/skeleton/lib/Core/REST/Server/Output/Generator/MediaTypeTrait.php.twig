namespace {{ lib_namespace }}\Core\REST\Server\Output\Generator;

/**
 * MediaType Trait.
 */
trait MediaTypeTrait
{
    /**
     * Generates a media type from $name and $type.
     *
     * @param string $name
     * @param string $type
     *
     * @return string
     */
    protected function generateMediaType($name, $type)
    {
        return "application/vnd.{{ bundle_name|lower }}.api.{$name}+{$type}";
    }
}